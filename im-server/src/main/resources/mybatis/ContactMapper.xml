<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--
      mapper为映射的根节点，用来管理DAO接口
      namespace指定DAO接口的完整类名，表示mapper配置文件管理哪个DAO接口(包.接口名)
      mybatis会依据这个接口动态创建一个实现类去实现这个接口，而这个实现类是一个Mapper对象
   -->
<mapper namespace="com.example.imserver.dao.mapper.ContactMapper">
    <!--
          id = "接口中的方法名"
          parameterType = "接口中传入方法的参数类型"
          resultType = "返回实体类对象：包.类名"  处理结果集 自动封装
          注意:sql语句后不要出现";"号
              查询：select标签
              增加：insert标签
              修改：update标签
              删除：delete标签
      -->
    <!--  1、根据该用户的id，查询其所有通讯录好友列表  -->
    <select id="queryContactList"   parameterType="java.util.List"
            resultType="com.example.imserver.controller.vo.ContactVO">
        select u.id,
               u.nickname,
               u.mobile,
               u.add_time,
               u.update_time,
               u.avatar,
               u.email,
               u.gender,
               u.birthday,
               u.motto
        from imy.user u
        <where>
            u.id in
            <foreach collection="friendIdList" item="friendId" open="(" separator="," close=")">
                #{friendId}
            </foreach>
        </where>
    </select>

    <!--  2、根据该用户的id，查询其所有好友关联信息  -->
    <!--  查询用户表目标参数  -->
    <!--    <sql id="Friend_Column_List">-->
    <!--        id-->
    <!--        , add_time, update_time, friend_uid, uid, remark, relation_type, latest_msg, direction, unread,-->
    <!--        is_delete-->
    <!--    </sql>-->
    <select id="queryFriendRelationInfo" parameterType="java.lang.Long"
            resultType="com.example.imserver.entity.FriendDO">
        select f.id,
               f.add_time,
               f.update_time,
               f.friend_uid,
               f.uid,
               f.remark,
               f.relation_type,
               f.latest_msg,
               f.direction,
               f.unread,
               f.is_delete
        from imy.friend f
        where f.uid = #{uid}
    </select>
</mapper>